# Backend environment variables
PORT=5000
MONGO_URI=mongodb://localhost:27017/novel-app
ACCESS_TOKEN_SECRET=change-me
REFRESH_TOKEN_SECRET=change-me

# Cloudinary (images only)
CLOUDINARY_CLOUD_NAME=
CLOUDINARY_API_KEY=
CLOUDINARY_API_SECRET=

# Cloudflare R2 storage (chapters)
R2_ENDPOINT=https://<account-id>.r2.cloudflarestorage.com
R2_ACCESS_KEY_ID=
R2_SECRET_ACCESS_KEY=
R2_BUCKET=novel-chapters
R2_PUBLIC_URL_BASE=https://pub-<account>.r2.dev
R2_REGION=auto

# Optional MinIO/S3-compatible dev endpoint
MINIO_ENDPOINT=
MINIO_ACCESS_KEY=
MINIO_SECRET_KEY=
MINIO_BUCKET=
MINIO_REGION=us-east-1
MINIO_FORCE_PATH_STYLE=true
MINIO_USE_SSL=false
MINIO_PUBLIC_URL=

# -----------------------------
# Payment providers (sandbox/test keys)
# -----------------------------
# Stripe (server-side secret key used to create Checkout Sessions / PaymentIntents)
# In latest Stripe test mode you can use only the secret key; webhook secret is optional.
STRIPE_SECRET_KEY=

# VNPAY (sandbox/test credentials)
# VNPAY_TMN_CODE: your VNPAY merchant code (m√£ website)
VNPAY_TMN_CODE=
# VNPAY_HASH_SECRET: HMAC/SHA512 secret used to sign VNPAY requests
VNPAY_HASH_SECRET=
# FRONTEND_URL: Base URL of frontend (absolute URL)
FRONTEND_URL=
# VNPAY_RETURN_PATH: Path VNPAY will redirect the user to after payment
VNPAY_RETURN_PATH=
# VNPAY_API_URL: base URL for VNPAY sandbox API (e.g. https://sandbox.vnpayment.vn/paymentv2/vpcpay.html)
VNPAY_API_URL=
